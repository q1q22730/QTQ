│   ├── search.css     # 搜索页面样式
│   ├── donation.css   # 捐赠页面样式
│   └── book-manage.css  # 书本管理页面样式
├── js/                # JavaScript文件夹
│   ├── main.js        # 主要脚本
│   ├── publish.js     # 发布页面脚本
│   ├── forum.js       # 论坛页面脚本
│   ├── search.js      # 搜索页面脚本
│   ├── donation.js    # 捐赠页面脚本
│   └── book-manage.js   # 书本管理页面脚本
